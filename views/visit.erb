<h2>Записаться</h2>

<form action="/visit" method="POST" role="form" >
    <div class="form-group">
        <label class="form-label">Ваше имя</label>
        <input name="user_name" type="text" class="form-control"  placeholder="Ваше имя" value="<%=@user_name%>">
    </div>
    <div class="form-group">
        <label class="form-label">Ваш телефон</label> 
        <input name="phone" type="text" class="form-control"  placeholder="Ваш телефон" value="<%=@phone%>">
    </div>
    <div class="form-group">
        <label class="form-label">Когда Вас ждать?</label>
        <input id="datetimepicker" name="date_time" type="text" class="form-control"  placeholder="Введите дату и время" value="<%=@date_time%>">
    </div>
    <div class="form-group">
    <label class="form-label">Ваш парикмахер:</label>
    <select name="barber"class="form-control" aria-label="Default select example">
        <% @barbers.each do |item| %>
            <option <%= @barber == item['name']? 'selected': '' %>><%= item['name'] %></option>
        <% end %>

    </select>
    </div>

     <div class="form-group">
        <label class="form-label">В кокой цвет Вас окрасить:</label>
        <select id="color" name="color">
            <option value="#7bd148">Green</option>
            <option value="#5484ed">Bold blue</option>
            <option value="#a4bdfc">Blue</option>
            <option value="#46d6db">Turquoise</option>
            <option value="#7ae7bf">Light green</option>
            <option value="#51b749">Bold green</option>
            <option value="#fbd75b">Yellow</option>
            <option value="#ffb878">Orange</option>
            <option value="#ff887c">Red</option>
            <option value="#dc2127">Bold red</option>
            <option value="#dbadff">Purple</option>
            <option value="#e1e1e1">Gray</option>
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Записаться</button>

</form>

<script type="text/javascript">

$(function(){

   $('#color').simplecolorpicker();
   
  
});  
</script>